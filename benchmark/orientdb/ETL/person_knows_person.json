{
	"config" : { "haltOnError": false },
	"source": { "file":  { "path": "{path to data dir}/data/ldbc/person_knows_person.csv" } },
	"extractor": {"csv": { "separator": "|", 
	                       "columns": ["p_id:long", "kp_id:long", "k_creationDate:string" ],
			               "columnsOnFirstLine": false} },
	"transformers": [ { "merge": { "joinFieldName": "p_id", "lookup": "Person.p_id" } },
					  { "vertex": { "class": "Person" } }, 
                   	  { "edge": { "class": "Knows", "joinFieldName": "kp_id", "lookup": "Person.p_id" } } ],
	"loader": {
		"orientdb": {
		"dbURL": "plocal:../databases/ldbc",
		"dbType": "graph",
		"classes": [ { "name": "Person", "extends": "V" },
					 { "name": "Knows", "extends": "E" } ], 
		"indexes": [ { "class": "Person", 
			           "fields": ["p_id:long"], 
			           "type": "UNIQUE" } ]
		}
	}
}